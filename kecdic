      "source": [
        "%%writefile app.py\n",
        "import streamlit as st\n",
        "\n",
        "st.set_page_config(\n",
        "    page_title=\"Streamlit Data App\",\n",
        "    layout=\"wide\",\n",
        "    initial_sidebar_state=\"expanded\",\n",
        "    menu_items={\n",
        "        'About': \"# This is a Streamlit data app!\"\n",
        "    }\n",
        ")\n",
        "\n",
        "st.title(\"Excel Data to JSON Viewer\")\n",
        "st.header(\"Data from Excel file displayed below\")\n",
        "print(\"app.py created with basic Streamlit template.\")"
